    private long? menuChatId = null;

    private void ToggleMenu(long chatId)
    {
        if (menuChatId == chatId)
            menuChatId = null;
        else
            menuChatId = chatId;
    }


    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadChats();
    }

    private async Task LoadChats()
    {
        var resultado = await chatServicio.GetEsAsync<List<ListaChatDTO>>($"api/Chat");

        if (!resultado.Error && resultado.Respuesta is not null)
        {
            //listaChats = resultado.Respuesta;
            Chats = resultado.Respuesta
            .GroupBy(c => c.Id)
            .Select(g => g.First())
            .ToList();
            //Chats = new List<ListaChatDTO>(ChatsOriginal);
        }
        else
        {
            Console.WriteLine("ERROR cargando chats");
        }
    }

    private IEnumerable<ListaChatDTO> FilteredPrivateChats =>
        Chats.Where(c => !c.IsGroup && ChatMatchesSearch(c));

    private IEnumerable<ListaChatDTO> FilteredGroupChats =>
        Chats.Where(c => c.IsGroup && ChatMatchesSearch(c));

    private bool ChatMatchesSearch(ListaChatDTO chat)
    {
        if (string.IsNullOrWhiteSpace(searchText)) return true;

        return chat.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase)
            || chat.Id.ToString().Contains(searchText);
    }

    private async Task EnterChat(long chatId)
    {
        Console.WriteLine($" Entrando al chat {chatId}");
        selectedChatId = chatId;
        await OnChatSelected.InvokeAsync(chatId); // esto conecta ambos componentes
    }


    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ');
        if (parts.Length == 1) return parts[0][0].ToString();
        return string.Concat(parts[0][0], parts[1][0]);
    }

