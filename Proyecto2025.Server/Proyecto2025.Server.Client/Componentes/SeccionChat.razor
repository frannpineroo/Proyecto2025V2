    private async Task Ocultar(int id)
    {
        await chatServicio.Post<OcultarMensajeDTO, object>("api/message/ocultar",
            new OcultarMensajeDTO { MensajeId = id });

        // await CargarMensajes(selectedChatId);
    }



    private async Task CrearChat()
    {
        nav.NavigateTo("/chat/crear");
    }

    private async Task CrearGrupo()
    {
        nav.NavigateTo("/chatmiembro/crear");
    }

    public async Task BuscarChats()
    {
        try 
        {
            Console.WriteLine($" Buscando: '{filtro}'");
            var resultado = await chatServicio.GetEsAsync<List<ListaChatDTO>>($"api/chat/{id}/{filtro}");

            if (!resultado.Error && resultado.Respuesta is not null)
            {
                Chats = resultado.Respuesta
                .GroupBy(c => c.Id)
                .Select(g => g.First())
                .ToList();
            }
            else
            {
                Console.WriteLine("No se pudo cargar usuarios");
            }
        }
        catch (Exception e)
        {
            Console.WriteLine("ERROR: " + e.Message);
        }
    }

    private async Task EliminarChat(long chatId)
    {
        var resultado = await chatServicio.Delete($"api/Chat/{chatId}");

        if (!resultado.Error)
        {
            Chats = Chats.Where(c => c.Id != chatId).ToList();
            menuChatId = null;
        }
        else
        {
            Console.WriteLine("Error al eliminar el chat");
        }
    }


