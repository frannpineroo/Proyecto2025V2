
@page "/chat-sidebar"
@inject IChatServicio chatServicio
@inject NavigationManager nav
@using Proyecto2025.Shared.DTO

<div class="sidebar">
    <div class="search-box">

        <div>
            <input @bind="filtro" class="form-control" placeholder="Buscar por nombre..." />
            <button class="btn btn-primary mt-2" @onclick="BuscarChats">
                Buscar
            </button>
            <button class="btn btn-primary mt-2" @onclick="CrearChat">
                crear
            </button>
            <button class="btn btn-primary mt-2" @onclick="CrearGrupo">
                crear grupo
            </button>


        </div>


        
        @if (listaChats != null)
        {
            <div class="Chat-resultados">
     
                @foreach (var u in listaChats)
                {
                    <div class="chat-item" @onclick="() => EnterChat(u.Id)">
                    <span class="avatar">@GetInitials(u.Name)</span>
                    <div class="chat-info">
                        <p class="name">@u.Name</p>
                    </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="chat-section">
        <h5>CHATS PRIVADOS</h5>
        @foreach (var chat in FilteredPrivateChats)
        {
            <div class="chat-item @(chat.Id == selectedChatId ? "active" : "") d-flex justify-content-between align-items-start"
                 @onclick="() => EnterChat(chat.Id)">

                <div class="d-flex align-items-center">
                    <span class="avatar">@GetInitials(chat.Name)</span>
                    <div class="chat-info ms-2">
                        <p class="name">@chat.Name</p>
                        <p class="preview">Chat privado</p>
                    </div>
                </div>

                <!-- Botón tres puntitos -->
                <div class="position-relative" @onclick:stopPropagation>
                    <button class="btn btn-sm btn-light"
                            @onclick="() => ToggleMenu(chat.Id)">
                        ⋮
                    </button>

                    @if (menuChatId == chat.Id)
                    {
                        <div class="dropdown-menu show" style="position:absolute; right:0; z-index:1000;">
                            <button class="dropdown-item text-danger"
                                    @onclick="() => EliminarChat(chat.Id)">
                                Eliminar
                            </button>
                        </div>
                    }
                </div>

            </div>
        }
    </div>


    <div class="chat-section">
        <h5>CHATS GRUPALES</h5>
        @foreach (var chat in FilteredGroupChats)
        {
            <div class="chat-item @(chat.Id == selectedChatId ? "active" : "") d-flex justify-content-between align-items-start"
                 @onclick="() => EnterChat(chat.Id)">

                <div class="d-flex align-items-center">
                    <span class="avatar">@GetInitials(chat.Name)</span>
                    <div class="chat-info ms-2">
                        <p class="name">@chat.Name</p>
                        <p class="preview">Chat grupal</p>
                    </div>
                </div>

                <div class="position-relative" @onclick:stopPropagation>
                    <button class="btn btn-sm btn-light"
                            @onclick="() => ToggleMenu(chat.Id)">
                        ⋮
                    </button>

                    @if (menuChatId == chat.Id)
                    {
                        <div class="dropdown-menu show" style="position:absolute; right:0; z-index:1000;">
                            <button class="dropdown-item text-danger"
                                    @onclick="() => EliminarChat(chat.Id)">
                                Eliminar
                            </button>
                        </div>
                    }
                </div>

            </div>
        }

            @* @foreach (var m in Mensajes)
            {
                <div class="message">
                    <b>@m.SenderName</b>   <!-- usuario real -->
                    <p>@m.Content</p>      <!-- mensaje real -->
                    <small>@m.SentAt.ToString("HH:mm")</small>
                </div>

            @if (selectedChatId != 0)
            {
                <div class="chat-input-bar">
                    <input class="form-control"
                           placeholder="Escribe un mensaje..."
                           @bind="nuevo.Content" />

                    <button class="btn btn-success"
                            @onclick="EnviarMensaje">
                        ➤
                    </button>
                </div>
            } *@

        
    </div>
</div>

