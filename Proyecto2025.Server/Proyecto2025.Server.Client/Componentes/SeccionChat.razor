@page "/chat-sidebar"
@inject IChatServicio chatServicio
@using Proyecto2025.Shared.DTO

<div class="sidebar">
    <div class="search-box">
        <input @bind="searchText" @bind:event="oninput" placeholder="Buscar chats por nombre o ID..." />
    </div>

    <div class="chat-section">
        <h5>CHATS PRIVADOS</h5>
        @foreach (var chat in FilteredPrivateChats)
        {
            <div class="chat-item @(chat.Id == selectedChatId ? "active" : "")"
                 @onclick="() => EnterChat(chat.Id)">
                <span class="avatar">@GetInitials(chat.Name)</span>
                <div class="chat-info">
                    <p class="name">@chat.Name</p>
                    <p class="preview">Chat privado</p>
                </div>
            </div>
        }
    </div>

    <div class="chat-section">
        <h5>CHATS GRUPALES</h5>
        @foreach (var chat in FilteredGroupChats)
        {
            <div class="chat-item @(chat.Id == selectedChatId ? "active" : "")"
                 @onclick="() => EnterChat(chat.Id)">
                <span class="avatar">@GetInitials(chat.Name)</span>
                <div class="chat-info">
                    <p class="name">@chat.Name</p>
                    <p class="preview">Chat grupal</p>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private long selectedChatId;
    private string searchText = string.Empty;

    private List<ListaChatDTO> Chats = new();
    private List<ListaChatDTO> ChatsOriginal = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadChats();
    }

    private async Task LoadChats()
    {
        var resultado = await chatServicio.GetEsAsync<List<ListaChatDTO>>("api/chat");

        if (!resultado.Error && resultado.Respuesta is not null)
        {
            ChatsOriginal = resultado.Respuesta;
            Chats = new List<ListaChatDTO>(ChatsOriginal);
        }
        else
        {
            Console.WriteLine("ERROR cargando chats");
        }
    }

    private IEnumerable<ListaChatDTO> FilteredPrivateChats =>
        Chats.Where(c => !c.IsGroup && ChatMatchesSearch(c));

    private IEnumerable<ListaChatDTO> FilteredGroupChats =>
        Chats.Where(c => c.IsGroup && ChatMatchesSearch(c));

    private bool ChatMatchesSearch(ListaChatDTO chat)
    {
        if (string.IsNullOrWhiteSpace(searchText)) return true;

        return chat.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase)
            || chat.Id.ToString().Contains(searchText);
    }

    private void EnterChat(long chatId)
    {
        selectedChatId = chatId;
        // NavigationManager.NavigateTo($"/chat/{chatId}");
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ');
        if (parts.Length == 1) return parts[0][0].ToString();
        return string.Concat(parts[0][0], parts[1][0]);
    }
}

