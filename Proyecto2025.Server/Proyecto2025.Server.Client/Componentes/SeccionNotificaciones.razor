@using System.Collections.Generic
@using Proyecto2025.Server.Client.Pages

<div class="notif-sidebar">
    <div class="notif-header">
        <h4>Notificaciones</h4>
    </div>

    <div class="notif-list">
        @if (Notifications != null && Notifications.Any())
        {
            @foreach (var n in Notifications)
            {
                <div class="notif-item @(n.Read ? "read" : "unread")">
                    <div class="notif-title">@n.Title</div>
                    <div class="notif-message">@n.Message</div>
                    <div class="notif-time">@n.Time</div>
                </div>
            }
        }
        else
        {
            <p class="empty">No hay notificaciones nuevas.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<Principal.NotificationModel> Notifications { get; set; } = new();
}

<style>
    .notif-sidebar {
        width: 300px;
        background: #fff;
        border-left: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        animation: slideIn 0.3s ease forwards;
    }


    .notif-header {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

        .notif-header h4 {
            margin: 0;
        }

    .notif-list {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
    }

    .notif-item {
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 10px;
        background: #f3f3ff;
    }

        .notif-item.unread {
            border-left: 4px solid #7a5af8;
        }

        .notif-item.read {
            opacity: 0.8;
        }

    .notif-title {
        font-weight: bold;
    }

    .notif-message {
        font-size: 13px;
        color: #555;
    }

    .notif-time {
        font-size: 11px;
        color: #888;
        text-align: right;
    }

    .empty {
        color: #aaa;
        text-align: center;
        margin-top: 20px;
    }
</style>