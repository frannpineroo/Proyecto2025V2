@page "/Principal"

<div class="chat-page">
    <div class="top-bar">
        <h3>Mensajes</h3>
        <button class="notif-btn" @onclick="ToggleNotifications">
            🔔
            @if (UnreadCount > 0)
            {
                <span class="badge">@UnreadCount</span>
            }
        </button>
    </div>

    <div class="chat-container">
        <SeccionChat OnChatSelected="OnChatSelected" />     @* IZQUIERDA  (SIDEBAR) EL CHAT *@
        <SeccionMensaje @ref="seccionMensaje" />   @* DERECHA (MENSAJES + INPUT) *@
        @if (ShowNotifications)
        {
            <SeccionNotificaciones Notifications="Notifications" />
        }
    </div>
</div>

@code {

    //CODIGO DE NOTIFICACIONES PARA REEMPLAZAR
    private bool ShowNotifications = false;
    private int UnreadCount => Notifications.Count(n => !n.Read);

    private List<NotificationModel> Notifications = new()
    {
        new NotificationModel { Title = "Reunión confirmada", Message = "El equipo de diseño confirmó la reunión del jueves.", Time = "10:45", Read = false },
        new NotificationModel { Title = "Mockups enviados", Message = "Has recibido los mockups del proyecto.", Time = "09:20", Read = true },
        new NotificationModel { Title = "Nuevo mensaje", Message = "Laura Martínez te ha escrito un nuevo mensaje.", Time = "Ayer", Read = false }
    };

    private void ToggleNotifications()
    {
        ShowNotifications = !ShowNotifications;
        if (ShowNotifications)
        {
            foreach (var n in Notifications)
                n.Read = true; // marca como leídas al abrir
        }
    }

    private SeccionMensaje? seccionMensaje;

    private async Task OnChatSelected(long chatId)
    {
        if (seccionMensaje != null)
            await seccionMensaje.Load(chatId);
    }


    public class NotificationModel
    {
        public string Title { get; set; } = "";
        public string Message { get; set; } = "";
        public string Time { get; set; } = "";
        public bool Read { get; set; }
    }
}

